<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivTabIcon"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO"
            android:layout_marginTop="@dimen/dp_10"
            tools:src="@drawable/x_loading_big" />

        <TextView
            android:id="@+id/tvTipCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_16"
            android:minHeight="@dimen/dp_16"
            android:layout_alignTop="@+id/ivTabIcon"
            android:layout_alignEnd="@+id/ivTabIcon"
            android:layout_marginEnd="-8dp"
            android:layout_marginTop="-6dp"
            android:background="@drawable/x_oval_red_main"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:visibility="gone"
            tools:text="16"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_3"
            android:textSize="@dimen/dp_11"
            tools:text="消息" />
    </RelativeLayout>
</RelativeLayout>