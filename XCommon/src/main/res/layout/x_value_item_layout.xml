<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/x_item_select_bg"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">


    <TextView
        android:id="@+id/tv_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/anhei"
        android:gravity="center_vertical|left"
        android:drawablePadding="@dimen/dp_5"
        android:textSize="15sp"
        tools:text="我是测试key" />

    <View
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="center_vertical|right"
        android:textColor="@color/anhei"
        android:textColorHint="@color/huise"
        android:drawablePadding="@dimen/dp_1"
        android:textSize="15sp"
        tools:text="我是测试value"
        tools:drawableRight="@drawable/x_right_arraw" />


</LinearLayout>
